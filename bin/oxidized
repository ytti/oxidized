#!/usr/bin/env ruby

# FIX ME, killing oxidized needs -9
trap("INT") { exit } # sinatra will otherwise steal this from us

begin
  require 'oxidized/cli'
  Oxidized::CLI.new.run
rescue StandardError => error
  warn error.to_s
  debug = begin
            Oxidied.config.debug
          rescue StandardError
            true
          end
  raise if debug
end
